@import 'variables.styl'

.controls 
  display: flex;
  justify-content: space-between;
  width: 80%;
  max-width: 1000px;
  margin: 0 auto 80px auto;

  .control
    text-align: center;

  label 
    display: block;
    margin-bottom: 15px;
    text-align: center;
    font-size: 22px;
  
  input 
    background-color: transparent;
    border: none;
    border-bottom: 2px solid #fefefe;
    color: #fefefe;
    font-size: 18px;
    padding: 2px 10px;
    width: auto;



button 
  background-color: $secondaryColor;
  border: none;
  color: #fefefe;
  font-size: 18px;
  padding: 15px 20px;
  transition: $buttonTransition;


  &:hover 
    background-color: darken($secondaryColor, 20%);
